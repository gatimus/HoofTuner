<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/songInfo">

            <ImageView
                android:id="@+id/stationBG"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/songImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/songImage" />


            <TextView
                android:id="@+id/songArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@id/event"
                android:layout_toRightOf="@id/songImage" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@id/songArtist"
                android:layout_toRightOf="@id/songImage" />

            <TextView
                android:id="@+id/event_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@id/songTitle"
                android:layout_toRightOf="@id/songImage" />

            <IconTextView
                android:id="@+id/icon_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-user}"
                android:layout_below="@id/event_upcoming"
                android:layout_toRightOf="@id/songImage" />

            <io.github.gatimus.hooftuner.IconToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="{fa-pause}"
                android:textOff="{fa-play}"
                android:layout_below="@id/icon_user"
                android:layout_toRightOf="@id/songImage"
                android:layout_centerInParent="true" />

            <IconTextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-thumbs-up}"
                android:textColor="@color/like"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_below="@+id/like"
                android:layout_alignParentRight="true" />
            <IconTextView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-thumbs-down}"
                android:textColor="@color/dislike"
                android:layout_below="@+id/score"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <!--
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/songInfo">

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pager_title_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

        </android.support.v4.view.ViewPager>
        -->




    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:background="@color/list_bg"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/list"
            android:choiceMode="singleChoice" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_list" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
