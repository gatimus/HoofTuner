<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:stretchColumns="1">

        <TableRow>
            <io.github.gatimus.hooftuner.PVLTextView
                android:id="@+id/station_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_span="2" />
            <IconTextView
                android:id="@+id/icon_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-user}"
                android:layout_column="2" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/song_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/song_generic"
                android:layout_column="0" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_column="1">
                <io.github.gatimus.hooftuner.PVLTextView
                    android:id="@+id/event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <io.github.gatimus.hooftuner.PVLTextView
                    android:id="@+id/song_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <io.github.gatimus.hooftuner.PVLTextView
                    android:id="@+id/song_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <io.github.gatimus.hooftuner.IconToggleButton
                    android:onClick="onPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="{fa-pause}"
                    android:textOff="{fa-play}"
                    android:textColor="@color/ponyvillelive_color"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_column="0">
                <IconTextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{fa-thumbs-up}"
                    android:textColor="@color/like" />
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---" />
                <IconTextView
                    android:id="@+id/dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{fa-thumbs-down}"
                    android:textColor="@color/dislike" />
            </LinearLayout>
            <io.github.gatimus.hooftuner.PVLTextView
                android:id="@+id/event_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/list"
            android:choiceMode="singleChoice" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_list" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
